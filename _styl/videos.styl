.videos
  display: flex
  flex-flow: row wrap
  margin: 0
  padding: 0
  .video
    margin: 1rem 0
    padding: 1rem
    display: flex
    flex-flow: row wrap
    gap: 1rem
    .thumbnail
      flex: 1
      min-width: 256px
      text-align: center
      img
        max-width: 256px
        min-width: 256px
        border-radius: .5rem
        box-shadow: 0 3px 5px rgba($colors.black, .5)
    .info
      flex: 1
      min-width: 256px
      h3
        font-size: 1.5rem
        line-height: 1
        font-weight: bold
        padding: 0
        margin: 0
      p
        font-size: 1rem
        margin: .5rem 0 0 0
      .published
        font-size: .9rem
        font-weight: bold


.videoplayer
  display: flex
  flex-flow: column nowrap
  .videowrapper
    float: none;
    clear: both;
    width: 100%;
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 25px;
    height: 0;
    iframe
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      box-shadow: 0 3px 5px rgba($colors.black, .5)

  .videolist
    background-color: $colors.black
    ul
      display: flex
      gap: 1px
      list-style: none
      flex-flow: row nowrap
      overflow: auto
      padding: 0
      margin: 0
      li
        flex: 0
        padding: .25rem
        .thumbnail
          a
            img
              max-width: 128px
        .title
          text-align: center
          a
            font-weight: normal
            font-size: .8rem
            display: block
            text-align: center
            white-space: nowrap
            text-overflow: ellipsis

// post formatting
.other
  font-size: 1rem
  border-right: 3px solid $colors.dark-grey
  @media screen and (min-width: 900px)
    flex: 0 40%

  ul
    margin: 0
    padding: 1rem
    list-style: none

    li
      padding: 0 0 1rem 0

.posts
  margin: auto
  padding: 0

  .post
    display: flex
    flex-flow: row wrap
    gap: .5rem
    padding: 0
    margin: 0
    padding: 3rem 0

    .thumbnail
      min-width: 256px
      flex: 0
      a
        display: block
        img
          max-width: 256px
          border-radius: .5rem
          box-shadow: 0 3px 5px rgba($colors.black, .5)
    .info
      flex: 1
      min-width: 300px
      padding: 0 .5rem
      h3
        font-size: 1.5rem
        margin: 0
        padding: 0
        a
          display: block

      .excerpt
        p
          font-size: 1rem
          margin: 0

@media screen and (max-width: 650px)
  .posts
    .post
      border-top: 3px solid black
      flex-flow: column nowrap
      .thumbnail
        justify-items: center
      .info
        padding: 0

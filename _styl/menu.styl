menu
  position: fixed
  top: 0
  left: 0
  right: 0
  width: 100%
  display: flex
  padding: 0
  margin: 0
  align-items: center
  justify-content: center
  background-color: rgba($colors.darkest-grey, .75)
  z-index: 1000

  a
    font-weight: normal

  .mobile
    display: none
  .desktop
    display: flex
    flex-flow: row wrap
    list-style: none
    margin: 0
    padding: 0
    align-items: center

    li
      font-size: .9rem
      padding: .25rem
      margin: 0
      color: $colors.white
      a
        display: inline-block
        padding: .5rem 1rem
        color: $colors.baby-blue
        text-decoration: none
        &:hover
          color: $colors.green

        &:active
          color: $colors.red

    .title
      font-size: 1rem

      a
        color: $colors.white
        &:hover
          background-color: transparent
          box-shadow: none
          border-bottom: 1px solid transparent

  @media screen and (max-width: 700px)
    .desktop
      display: none
    .mobile
      display: flex
      flex: 1
      flex-flow: column nowrap
      position relative
      &-menu
        display: flex
        flex-flow: row nowrap
        flex: 1
        justify-content: center
        align-items: center
        flex-flow: row nowrap
        .menu-title
          flex: 1
          text-align: left
          padding: .5rem 1rem
          font-size: 1.3rem
        .menu-button
          flex: 0 3rem
          padding: .5rem
          .icn-menu
            font-size: 2.5rem
            color: white
      &-options
        transition: var(--transition-default)
        transform: translateZ(0)
        position: fixed
        top: 0
        left: 0
        right: 0
        bottom: 0
        width: 100%
        height: 100%
        background-color: $colors.black
        display: none
        opacity: 0

        &.open
          animation-name: fade-in
          animation-duration: .5s
          display: flex
          opacity: 1

          ul
            list-style: none
            margin: 0
            padding: 0
            display: flex
            flex: 1
            align-self: center
            flex-flow: column
            li
              font-size: 3rem

        &-close
          position: absolute
          top: 5px
          right: 5px
          font-size: 2.5rem

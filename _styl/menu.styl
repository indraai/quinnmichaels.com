menu
  display: flex
  padding: 0
  margin: 0
  align-items: center
  justify-content: center
  background-color: rgba($colors.darkest-grey, .65)
  .mobile
    display: none
  .desktop
    display: flex

  @media screen and (max-width: 700px)
    .mobile
      display: flex
      flex: 1
      flex-flow: column nowrap
      position relative
      &-menu
        display: flex
        flex-flow: row nowrap
        flex: 1
        justify-content: center
        align-items: center
        flex-flow: row nowrap
        .menu-title
          flex: 1
          text-align: left
          padding: .5rem 1rem
          font-size: 1.5rem
        .menu-button
          flex: 0 3rem
          padding: .5rem
          .icn-menu
            font-size: 2.5rem
            color: white
      &-options
        position: fixed
        top: 0
        left: 0
        right: 0
        bottom: 0
        width: 100%
        height: 100%
        background-color: $colors.black
        display: none
        &.open
          display: flex
          ul
            display: flex
            flex: 1
            align-self: center
            flex-flow: column
            li
              font-size: 3rem
    .desktop
      display: none

  ul
    flex-flow: row wrap
    list-style: none
    margin: 0
    padding: 0
    align-items: center

    li
      font-size: .9rem
      padding: .25rem
      margin: 0
      color: $colors.white
      a
        display: inline-block
        padding: .5rem 1rem
        border-radius: 2rem
        color: $colors.light-grey
        &:hover
          text-decoration: none
          background-color: $colors.baby-blue
          color: $colors.darkest-grey
          box-shadow: inset 0 2px 5px rgba($colors.black, .5)

        &:active
          text-decoration: none
          background-color: $colors.green
          color: $colors.darkest-grey
